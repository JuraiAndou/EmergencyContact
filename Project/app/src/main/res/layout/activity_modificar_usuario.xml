<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/perfil_do_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo">

    <Button
        android:id="@+id/bt_criar"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:backgroundTint="#106FFD"
        android:contentDescription="Criar conta"
        android:fontFamily="@font/montserrat_bold"
        android:text="MODIFICAR"
        android:textSize="16sp"
        app:cornerRadius="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swt_login"
        app:layout_constraintVertical_bias="0.187" />

    <TextView
        android:id="@+id/tx_modificarUsuario"
        android:layout_width="291dp"
        android:layout_height="65dp"
        android:layout_marginTop="100dp"
        android:contentDescription="Modificar usuario"
        android:fontFamily="@font/montserrat_bold"
        android:text="MODIFICAR USUÁRIO"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_senha3"
        android:layout_width="292dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Defina sua senha"
        android:inputType="textPersonName"
        android:text="Senha"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#A3A3A3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nome3" />

    <EditText
        android:id="@+id/edt_login3"
        android:layout_width="292dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Defina sua Login"
        android:inputType="textPersonName"
        android:text="Login"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#A3A3A3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_senha3" />

    <EditText
        android:id="@+id/edt_email3"
        android:layout_width="292dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Defina sua email"
        android:inputType="textPersonName"
        android:text="Email"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#A3A3A3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_login3" />

    <EditText
        android:id="@+id/edt_nome3"
        android:layout_width="292dp"
        android:layout_height="53dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="Defina seu nome"
        android:inputType="textPersonName"
        android:text="Nome"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#A3A3A3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_modificarUsuario" />

    <Switch
        android:id="@+id/swt_login"
        android:layout_width="167dp"
        android:layout_height="49dp"
        android:contentDescription="Deseja se manter logado?"
        android:text="Manter logado?"
        android:textColor="#EAE7E7"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_email3"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/activity_main_bottom_actions" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>