<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="291dp"
        android:layout_height="65dp"
        android:layout_marginTop="188dp"
        android:contentDescription="Bem vindo"
        android:fontFamily="@font/montserrat_bold"
        android:text="BEM VINDO"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/edt_nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edt_nome"
        android:layout_width="292dp"
        android:layout_height="53dp"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="Insira seu Login"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:inputType="textPersonName"
        android:text="Login"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#A3A3A3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="339dp" />

    <EditText
        android:id="@+id/edt_Senha"
        android:layout_width="292dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="Insira seu nome"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:inputType="textPersonName"
        android:text="Senha"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#A6A6A6"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nome" />

    <Button
        android:id="@+id/bt_entrar"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#106FFD"
        android:contentDescription="Entrar"
        android:fontFamily="@font/montserrat_bold"
        android:text="Entrar"
        android:textSize="16sp"
        app:cornerRadius="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_Senha" />

    <Button
        android:id="@+id/bt_entrar2"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="Cadastre-se"
        android:fontFamily="@font/montserrat_bold"
        android:text="Cadastre-se"
        android:textSize="16sp"
        app:cornerRadius="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_Senha"
        app:rippleColor="#AA7171"
        app:strokeColor="#106FFD"
        app:strokeWidth="2sp" />

    <TextView
        android:id="@+id/tx_esqueci"
        android:layout_width="149dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Esqueci minha senha"
        android:fontFamily="@font/montserrat"
        android:text="Esqueceu a senha?"
        android:textAlignment="textEnd"
        android:textColor="#1485FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_Senha" />

</androidx.constraintlayout.widget.ConstraintLayout>